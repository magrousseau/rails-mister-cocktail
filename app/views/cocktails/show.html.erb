<div class="container">
  <div >
    <% if @cocktail.photo.attached? == true %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 400, width: 400, crop: :fill %>')">
      <span class="text-capitalize title-big"><%= @cocktail.name %></span>
      </div>
    <% end %>
  </div>


  <div class="container-fluid mt-2 mb-4 pb-3 border-bottom ">
    <div class="row">
      <div class="col-7 d-bloc">
        <h2 class="text-left my-4">Receipe</h2>
        <% @cocktail.doses.each do |dose|  %>
          <div class="border-bottom d-flex justify-content-between">
            <div>
            <span class="font-weight-bold"><%= dose.ingredient.name %></span>
            -
            <span class="font-weight-light"><%= dose.description %></span>
            </div>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
              <i class="far fa-trash-alt "></i>
              <% end %>
          </div>
          <br>
        <% end %>
      </div>
        <div class="col-5">
          <h4 class="text-center m-4">Add an ingredient</h4>
          <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
        </div>
    </div>
  </div>
<%= link_to "back to cocktails", cocktails_path, class: "btn btn-ghost"  %>
</div>
