<div class="container">


  <div class="container-fluid mt-2 mb-4 pb-3 border-bottom ">
    <div class="row border-bottom mb-4">
        <div class="col-6">
          <% if @cocktail.photo.attached? == true %>
            <div class="image-small" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 400, width: 400, crop: :fill %>')">
            </div>
          <% end %>
        </div>
        <div class="col-6 justify-content-left">
          <h1 class="text-capitalize title-spaced mt-5"><%= @cocktail.name %></h1>
          <p>Design your cocktail</p>
        </div>
      </div>
      <div class="row mt-4">
      <div class="col-6 d-bloc">
        <% @cocktail.doses.each do |dose|  %>
          <div class="border-bottom d-flex justify-content-between">
            <div>
            <span class="font-weight-bold"><%= dose.ingredient.name %></span>
            -
            <span class="font-weight-light"><%= dose.description %></span>
            </div>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
              <i class="far fa-trash-alt "></i>
              <% end %>
          </div>
          <br>
        <% end %>
      </div>
        <div class="col-5 mb-3">
          <h4 class="text-center mb-4">Add an ingredient</h4>
          <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
        </div>
    </div>
  </div>
<%= link_to "back to cocktails", cocktails_path, class: "btn btn-ghost"  %>
</div>
