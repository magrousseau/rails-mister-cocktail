<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1509669803555-fd5edd8d5a41?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60'); height: 200px;">
  All your cocktails
</div>

<div class="container my-5">
  <div class="cards row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? == true %>
      <div class="col-md-8 col-lg-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 100, width: 150, crop: :fill %>')">
          <%= cocktail.name %>
        </div>
      </div>
      <div class="col-md-4 col-lg-2">
        <%= link_to "composition", cocktail_path(cocktail), class: "btn btn-ghost"  %>
        <%= link_to "delete", cocktail_path(cocktail), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-ghost" %>
      </div>
      <% end %>
    <% end %>
  </div>
  </div>

